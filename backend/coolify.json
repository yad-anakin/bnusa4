{
  "version": "1.0.0",
  "name": "bnusa-backend",
  "type": "application",
  "buildPack": "docker",
  "dockerfilePath": "./Dockerfile",
  "port": 5003,
  "healthCheckPath": "/api/health",
  "environmentVariables": [
    {
      "name": "NODE_ENV",
      "value": "production"
    },
    {
      "name": "PORT",
      "value": "5003"
    }
  ],
  "volumes": [],
  "secrets": [
    "MONGODB_URI",
    "CORS_ALLOWED_ORIGINS",
    "B2_BUCKET_NAME",
    "B2_ENDPOINT",
    "B2_REGION",
    "B2_ACCESS_KEY_ID",
    "B2_SECRET_ACCESS_KEY",
    "JWT_SECRET",
    "IP_WHITELIST"
  ]
} 